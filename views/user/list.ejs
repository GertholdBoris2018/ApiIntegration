<!--
including header content which is common for all pages
-->
<%- include ../layouts/header.ejs %>

<% if (messages.error) { %>
	<p style="color:red"><%- messages.error %></p>
<% } %>

<% if (messages.success) { %>
	<p style="color:green"><%- messages.success %></p>
<% } %>	

<table width='80%' border=0>

	<tr style='text-align:left; background-color:#CCC'>
		<th>id</th>
		<th>quantity</th>
		<th>first_name</th>
		<th>last_name</th>
		<th>email_address</th>
		<th>mobile_number</th>
		<th>street_address1</th>
		<th>street_address2</th>
		<th>state_city</th>
		<th>date_deliverty</th>
		<th>message</th>
		<th>action</th>
	</tr>
	
	<!--
		Using FOREACH LOOP for the users array
		
		myArray.forEach(function(el, index) {
			// el - current element, i - index
		});
	-->
	<% if (data) { %>
	<% data.forEach(function(user){ %>
		<tr>
			<td><%= user.id %></td>
			<td><%= user.quantity %></td>
			<td><%= user.first_name %></td>
			<td><%= user.last_name %></td>
			<td><%= user.email_address %></td>
			<td><%= user.mobile_number %></td>
			<td><%= user.street_address1 %></td>
			<td><%= user.street_address2 %></td>
			<td><%= user.state_city %></td>
			<td><%= user.date_deliverty %></td>
			<td><%= user.message %></td>
			<td>
				<div style="float:left">
					<a href='/users/edit/<%= user.id %>'>Edit</a> &nbsp;							
					<form method="post" action="/users/delete/<%= user.id %>" style="float:right">
						<input type="submit" name="delete" value='Delete' onClick="return confirm('Are you sure you want to delete?')" />
						<input type="hidden" name="_method" value="DELETE" />
					</form>
				</div>
			</td>
		</tr>
	<% }) %>
	<% } %>

</table>

<!--
including footer content which is common for all pages
-->
<%- include ../layouts/footer.ejs %>
